<h1>Welcome, <%= @user.name %>!</h1>
<% if @message %>
  <h4><%= @message %></h4>
<% else %>
  <h4> You have <%= @stations.count %> stations in your zip.</h4>
<% end %>

<%= link_to "Show all #{@user.name}'s stations", user_stations_path(@user), class:'btn btn-primary' %>
<%= link_to "Check for Updates", stations_check_for_updates_path, class:'btn btn-warning' %>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Access</th>
    <th>Link</th>
    <th>Add Station</th>
  </tr>
  <% @stations.each do |s|%>
    <tr>
        <td>
            <%= s.name %>
        </td>
        <td>
            <%= "#{s.address}, #{s.city}, #{s.state}, #{s.zip}" %>
        </td>
        <td>
            <%= s.access %>
        </td>
        <td>
           <%= link_to "Show #{s.name}", station_path(s)%>
        </td>
        <td>
        <!---show add only if current_user doesn't already have station saved--->
           <%= link_to "Add to Your Stations", add_station_path(current_user, s), class:'btn btn-primary' %>
        </td>
    </tr>
  <% end %>
</table>