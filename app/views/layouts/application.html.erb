<!DOCTYPE html>
<html>
  <head>
    <title>AltFuelStationsDvb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
          <a class= "navbar-brand" href=""> Alt Fuel Stations </a>
          </div>
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
            <li>
              <a href="<%= user_stations_path(current_user) %>"/>Home</a>
            </li>
             <li>
              <a href="<%= user_path(current_user) %>"/>Stations Near You</a>
            </li>
             <li>
              <a href="<%= new_user_station_path(current_user) %>"/>Create Station</a>
            </li>
            <li>
              <a href="<%= settings_path(current_user) %>"/>Settings</a>
            </li>
            <li>
              <a href="<%= logout_path %>" />Log Out</a>
            </li>
          </ul>
            <form class="navbar-form navbar-right" action= <%= search_path %>>
            <input class="form-control" type="search" name="zip" placeholder="Zip Code">
            <button class="btn" type="submit">Search</button>
            </form>
            <% else %>
            <li>
              <a href="<%= new_session_path %>">Login</a>
            </li>
            <li>
              <a href="<%= new_user_path %>">Sign Up</a>
            </li>
          </ul>

            <% end %>
      </div>
    </div>
  <!-- content -->
  <div id="flash_message">
   <% if flash[:alert] %>
      <div class="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>

    <%= yield %>

  </body>
</html>
